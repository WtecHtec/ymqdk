.record-content {
	box-sizing: border-box;
	overflow: hidden;
	padding-bottom: 30rpx;
}

.form {
	padding: 0 30rpx;
	background-color: #fff;
}


.form-item {
	padding: 32rpx 0;
	position: relative;
	display: flex;
}

.form-item::after {
	position: absolute;
	content: "";
	bottom: 0;
	width: 100%;
	border-bottom: 2rpx solid #f5f5f5;
	transform: scaleY(0.5);
}

.form-item-lable {
	width: 240rpx;
	color: #353535;
	font-size: 34rpx;
}

.mt-24 {
	margin-top: 24rpx;
}

.submit-btn {
	margin-top: 80rpx;
	background-color: #1978FF;
	color: #ffffff;
	font-size: 34rpx;
}

.pb-24 {
	padding-bottom: 24rpx;
}

.upload {
	background-color: #f4f4f4;
	height: 340rpx;
	border-radius: 8rpx;
	overflow: hidden;
}

.no-upload {
	display: flex;
	height: 100%;
	align-items: center;
	justify-content: center;
}

.upload-img {
	width: 120rpx;
	height: 120rpx;
}

.show-img {
	width: 100%;
	height: 340rpx;
}

.form-item-value {
	font-size: 34rpx;
	flex: 1;
}

.picker-txt {
	flex: 1;
}

.picker-icon {
	flex-shrink: 0;
	width: 40rpx;
	height: 40rpx;
	transition: all .3s;
}

.w-100p {
	width: 100%;
}

.picker-content {
	display: flex;
	align-items: center;
}

.emoj-content {
	display: flex;
	justify-content: space-between;
}

.tap-picker {
	transform: rotate(90deg);
}

.emoj-picker {
	transition: all .3s;
	max-height: 0;
	overflow: hidden;
	display: flex;
	flex-wrap: wrap;
}

.tap-emoj-picker {
	max-height: 1000rpx;
	padding-bottom: 12rpx;
}

.emoj-picker-item {
	padding: 20rpx;
}

.emoj-picker-icon {
	width: 56rpx;
	height: 56rpx;
}

.show-value {
  color: #333333;
  font-size: 28rpx;
}