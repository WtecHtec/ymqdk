.fix-header {
  position: fixed !important;
  top: 0;
  left: 0;
  right: 0;
  z-index: 999;
  background-color: #ffffff;
}

.sinput-container {
  padding: 20rpx 30rpx 20rpx 30rpx;
  position: relative;
}

.s-container {
  width: 100%;
  height: 80rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 24rpx;
}


.s-icon {
  width: 40rpx;
  height: 40rpx;
  padding-right: 16rpx;
}

.blur{
  background-color: #F2F2F2;
  border: 2rpx solid #F2F2F2;
}

.focus{
  background-color: #FBFCFF;
  border: 2rpx solid rgba(25,120,255,1);
  border-radius: 10rpx;
}


.s-input {
  height: 100%;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #353535;
}

.s-input-ellipse {
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.s-txt {
  color: rgba(25,120,255,1);
  padding-left: 8rpx;
  flex-shrink: 0;
}

.r-main {
  position: relative;
  height: 90rpx;
  line-height: 90rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.srank-container {
  padding: 120rpx 30rpx 0 30rpx;
  background-color: #ffffff;
}

.r-tip {
  color: #999999;
  font-size: 28rpx;
}