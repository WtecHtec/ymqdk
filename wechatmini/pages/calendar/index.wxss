.top-nav {
	padding: 24rpx 0;
	margin-bottom: 24rpx;
	text-align: center;
	display: flex;
	justify-content: center;
	align-items: center;
	background-color: #ffffff;
}

.date-picker {
	width: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
}

.item-icon {
	width: 30rpx;
	height: 30rpx;
	margin-right: 8rpx;
}


.item-txt {
	font-size: 28rpx;
	color: #333333;
}

.calendar {
	background-color: #ffffff;
	box-sizing: border-box;
}

.c-week {
	box-sizing: border-box;
	padding: 14rpx 0;
	display: flex;
	align-items: center;
}

.c-w-item {
	flex: 1;
	text-align: center;
	color: #999999;
	font-size: 24rpx;
}

.c-date {
	box-sizing: border-box;
	display: flex;
	align-items: center;
	flex-wrap: wrap;
}

.c-d-item {
	width: calc(100vw / 7);
	flex-shrink: 0;
	text-align: center;
	color: #333333;
	font-size: 32rpx;
	margin-bottom: 12rpx;
	box-sizing: border-box;
	height: 120rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}

.c-265cf0 {
	color: #265cf0;
}

.emoj-picker-icon {
	width: 56rpx;
	height: 56rpx;
}