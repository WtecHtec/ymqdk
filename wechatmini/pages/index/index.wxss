.target-map {
	width: 100%;
	height: 100vh;
}

.content {
	position: relative;
	box-sizing: border-box;
}

.no-login {
	height: 100vh;
	display: flex;
	flex-direction: column;
	align-items: center;
	box-sizing: border-box;
	padding: 0 30rpx;
}

.top-nav {
	position: absolute;
	left: 0;
	width: 100%;
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 12rpx 24rpx;
	background-color: rgba(25, 120, 255, 0.1);
	backdrop-filter: blur(5rpx);
	box-shadow: 0 8rpx 16rpx 0 rgba(0, 0, 0, 0.1);
	font-size: 30rpx;
	box-sizing: border-box;
}

.nav-left {
	display: flex;
	align-items: center;
}

.nav-left-sub {
	font-size: 24rpx;
	margin-left: 12rpx;
}

.nav-right {
	display: flex;
}

.info-block {
	width: 46rpx;
	height: 46rpx;
	border-radius: 50%;
	background-color: #ffffff;
}

.check-block {
	display: flex;
	align-items: center;
	justify-content: center;
	border-radius: 46rpx;
	background-color: #ffffff;
	margin-left: 12rpx;
	padding: 6rpx 12rpx;
}

.check-img {
	width: 40rpx;
	height: 40rpx;
	vertical-align: top;
	line-height: 46rpx;
}

.check-txt {
	margin-left: 4rpx;
	font-size: 28rpx;
}

.btn-img {
	width: 80rpx;
	height: 80rpx;
	vertical-align: top;
}

.btn {
	width: 180rpx;
	height: 180rpx;
	position: absolute;
	bottom: 80rpx;
	left: 50%;
	transform: translateX(-50%);
	background-color: #1978FF;
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
}

.user-img {
	width: 240rpx;
	height: 240rpx;
	margin-top: 220rpx;
	margin-bottom: 24rpx;
}

.auth-btn {
	color: #ffffff;
	margin-top: 80rpx;
	background-color: #1978FF;
	animation: animate 3s linear infinite;
}

@keyframes animate {
	0% {
		box-shadow: 0 0 0 0 rgba(55, 209, 201, 0.7), 0 0 0 0 rgba(24, 153, 104, 0.7);
	}

	40% {
		box-shadow: 0 0 0 12px rgba(55, 209, 201, 0), 0 0 0 0 rgba(55, 209, 201, 0.7);
	}

	80% {
		box-shadow: 0 0 0 12px rgba(55, 209, 201, 0), 0 0 0 30px rgba(55, 209, 201, 0);
	}

	100% {
		box-shadow: 0 0 0 0 rgba(55, 209, 201, 0), 0 0 0 30px rgba(55, 209, 201, 0);
	}
}

.auth-txt {
	font-size: 32rpx;
}