.record-content {
	box-sizing: border-box;
	overflow: hidden;
	padding-bottom: 30rpx;
}

.form {
	padding: 0 30rpx;
	background-color: #fff;
}


.form-item {
	padding: 32rpx 0;
	position: relative;
	display: flex;
}

.form-item::after {
	position: absolute;
	content: "";
	bottom: 0;
	width: 100%;
	border-bottom: 2rpx solid #f5f5f5;
	transform: scaleY(0.5);
}

.form-item-lable {
	width: 240rpx;
	color: #353535;
	font-size: 34rpx;
}

.mt-24 {
	margin-top: 24rpx;
}

.submit-btn {
	margin-top: 80rpx;
	background-color: #1978FF;
	color: #ffffff;
	font-size: 34rpx;
}


.picker-txt {
	flex: 1;
}

.picker-icon {
	flex-shrink: 0;
	width: 40rpx;
	height: 40rpx;
	transition: all .3s;
}

.w-100p {
	width: 100%;
}

.picker-content {
	display: flex;
	align-items: center;
}

.form-item-value {
	font-size: 34rpx;
	flex: 1;
}

.cus-slider {
	margin: 0;
}

.version-block {
	font-size: 24rpx;
	color: #999999;
	text-align: center;
	margin-top: 24rpx;
}